    "apollo-server": "^2.1.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "delay": "^4.0.1",
    "express": "^5.0.0-alpha.6",
    "express-http-proxy": "^1.4.0",
    "gitdown": "^2.5.4",
    "glob": "^7.1.3",
    "graphql": "^14.0.2",
    "graphql-iso-date": "^3.6.1",
    "graphql-server-core": "^1.4.0",
    "graphql-tag": "^2.9.2",
    "graphql-tools": "^4.0.0",
    "graphql-type-json": "^0.2.1",
    "human-interval": "^0.1.6",
    "lodash": "^4.17.11",
    "node-fetch": "^2.2.0",
    "pretty-ms": "^4.0.0",
    "react": "^16.6.0-alpha.0",
    "react-dom": "^16.6.0-alpha.0",
    "regex-parser": "^2.2.9",
