    "serialize-error": "^2.1.0",
    "serve-static": "^1.13.2",
    "throat": "^4.1.0",
    "uuid": "^3.3.2",
    "webpack": "^4.20.2",
    "yargs": "^12.0.2"
  },
  "description": "Active monitoring and alerting system using user-defined Node.js scripts.",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ava": "^1.0.0-beta.8",
    "babel-loader": "^8.0.4",
    "babel-plugin-istanbul": "^5.1.0",
    "coveralls": "^3.0.2",
    "css-loader": "^1.0.0",
    "css-module-flow": "^1.0.0",
    "eslint": "^5.6.1",
    "eslint-config-canonical": "^13.0.0",
    "flow-bin": "^0.81.0",
    "flow-copy-source": "^2.0.2",
    "husky": "^1.0.1",
    "nock": "^10.0.0",
    "node-sass": "^4.9.3",
    "nyc": "^13.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-scss": "^2.0.0",
    "resolve-url-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "semantic-release": "^15.9.16",
    "sinon": "^6.3.4",
    "style-loader": "^0.23.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0"
  },
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "post-commit": "npm run create-readme && git add README.md && git commit -m 'docs: generate docs' --no-verify",
      "pre-commit": "npm run lint && npm run test && npm run build"
    }
  },
  "keywords": [
    "warning",
    "alerting",
    "monitoring"
  ],
  "main": "./dist/index.js",
  "name": "palantir",
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "require": [
      "@babel/register"
    ],
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:gajus/palantir.git"
  },
  "scripts": {
    "build": "rm -fr ./dist && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps && webpack --config-register @babel/register --config src/report-web-app/webpack.configuration.production.js",
    "create-readme": "gitdown ./.README/README.md --output-file ./README.md",
    "dev": "NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps --watch",
    "lint": "eslint ./src && flow",
    "test": "NODE_ENV=test nyc ava --verbose --serial --concurrency 1 && nyc report --reporter=text"
  },
  "version": "1.0.0"
}
