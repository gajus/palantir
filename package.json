    "@babel/preset-react": "^7.0.0-beta.56",
    "@babel/register": "^7.0.0-beta.56",
    "ava": "^1.0.0-beta.6",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-istanbul": "^4.1.6",
    "coveralls": "^3.0.2",
    "css-loader": "^1.0.0",
    "css-module-flow": "^1.0.0",
    "eslint": "^5.3.0",
    "eslint-config-canonical": "^11.0.0",
    "flow-bin": "^0.78.0",
    "flow-copy-source": "^2.0.2",
    "husky": "^1.0.0-rc.9",
    "nock": "^9.4.4",
